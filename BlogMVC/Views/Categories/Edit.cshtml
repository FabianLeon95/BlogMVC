@model BlogMVC.Models.Category

@{
    ViewBag.Title = "Edit";
}

<h2 class="mb-4">Editar</h2>

<div class="card mb-4 shadow">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Guardar" class="btn btn-primary mt-3 float-right shadow-sm" />
        }
    </div>
</div>

<div>
    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary shadow-sm"})
</div>
