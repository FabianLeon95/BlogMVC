@model BlogMVC.Models.Post

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4 shadow">
            <div class="card-body">
                <h2>@Html.DisplayFor(model => model.Title)</h2>
                <p>
                    Por
                    <a href="#">
                        @Html.DisplayFor(model => model.User.FirstName)
                        @Html.DisplayFor(model => model.User.LastName)
                    </a>
                </p>

                <hr />
                @Html.Raw(Model.CreatedDate.ToString("dd MMMM yyyy"))
                @if (!Model.UpdatedDate.Equals(Model.CreatedDate))
                {
                    <small class="text-muted float-right ml-2">
                        @Html.Raw($"Editado el {Model.CreatedDate.ToString("dd MMMM yyyy")}")
                    </small>
                }
                <hr />

                <p style="font-size: 1.25rem">
                    @Html.DisplayFor(model => model.Description)
                </p>

                <img class="mb-3 img-fluid" src="~/Uploads/PostImages/@Html.DisplayFor(model => model.ImagePath)" alt="@Html.DisplayFor(model => model.Title)" />

                <p>
                    @Html.DisplayFor(model => model.Content)
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4 shadow">
            <div class="card-header">
                <span class="card-title">Categorías</span>
            </div>
            <div class="card-body">
                <span class="badge badge-pill badge-primary" style="font-size: .85rem">
                    @Html.DisplayFor(model => model.Category.Title)
                </span>
            </div>
        </div>
    </div>

</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary shadow-sm" })
    @Html.ActionLink("Volver", "Index", null,  new { @class = "btn btn-secondary shadow-sm" })
</p>
