@model IEnumerable<BlogMVC.Models.Post>

@{
    ViewBag.Title = "Posts";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="mb-0">Posts</h2>

    <p class="mb-0">
        @Html.ActionLink("Nuevo Post", "Create", null, new { @class = "btn btn-primary shadow-sm" })
    </p>
</div>
<div class="card mb-4 shadow">
    <div class="card-body">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th class="border-top-0 mt-0">
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th class="border-top-0 mt-0">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="border-top-0 mt-0">
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </th>
                    <th class="border-top-0 mt-0">
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th class="border-top-0 mt-0"></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <span class="badge badge-pill badge-primary shadow-sm" style="font-size: 1rem">
                            @Html.DisplayFor(modelItem => item.Category.Title)
                        </span>
                    </td>
                    <td>
                        @Html.Raw(item.CreatedDate.ToString("dd-MM-yyyy"))
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm mb-1 shadow-sm" title="Editar"><i class="fas fa-pen fa-fw"></i></a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-sm mb-1 shadow-sm" title="Detalles"><i class="fas fa-info fa-fw"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm mb-1 shadow-sm" title="Eliminar"><i class="fas fa-trash fa-fw"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
