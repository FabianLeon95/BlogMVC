@model BlogMVC.Models.Post

@{
    ViewBag.Title = "Eliminar Post";
}

<h2 class="mb-4">Eliminar Post</h2>

<div class="card mb-4 shadow" style="border-left: .25rem solid #dc3545">
    <div class="card-body d-flex align-items-center">
        <div class="d-inline-block">
            <i class="fas fa-exclamation-triangle h3 text-danger mr-3"></i>
        </div>
        <h4 class="d-inline-block">
            ¿Está seguro que desea eliminar el post <span class="font-italic">"@Html.DisplayFor(model => model.Title)"</span>?
        </h4>

    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <input type="submit" value="Eliminar" class="btn btn-danger shadow-sm" />
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary shadow-sm" })
    </div>
}

