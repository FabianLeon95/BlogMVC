@model BlogMVC.ViewModels.BlogCategoryViewModel

@{
    ViewBag.Title = Model.Category.Title;
}

<h2 class="mb-4 pl-2" style="border-left: .25rem solid #007bff">@Html.DisplayFor(model => model.Category.Title)</h2>

<div class="row">
    <div class="col-md-8">
        @foreach (var item in Model.Category.Posts)
        {
            <div class="card mb-3 shadow">
                <img src="~/Uploads/PostImages/@Html.DisplayFor(modelItem => item.ImagePath)" class="card-img-top" alt="Alternate Text" />
                <div class="card-body">
                    <a href="@Url.Action("Post", new { id = item.Id })">
                        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                    </a>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    @Html.ActionLink("Ver más >>", "Post", new { id = item.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        @{
            Html.RenderAction("SearchForm");
            Html.RenderAction("CategoriesList");
        }
    </div>
</div>
