@model IEnumerable<BlogMVC.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Usuarios";
}

<h2 class="mb-4">Usuarios</h2>

<div class="card mb-4 shadow">
    <div class="card-body">
        <table class="table table-responsive-sm">
            <thead>
                <tr>
                    <th class="border-top-0">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th class="border-top-0">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="border-top-0">
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th class="border-top-0"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm mb-1 shadow-sm" title="Editar"><i class="fas fa-pen fa-fw"></i></a>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-sm mb-1 shadow-sm" title="Detalles"><i class="fas fa-info fa-fw"></i></a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm mb-1 shadow-sm" title="Eliminar"><i class="fas fa-trash fa-fw"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
